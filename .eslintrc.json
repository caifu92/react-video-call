{
	"env": {
		"browser": true,
		"node": true,
		"commonjs": true,
		"es6": true,
		"jasmine": true
	},
	"globals": {
		"RTCPeerConnection": true,
		"io": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 6
	},
	"settings": {
		"react": {
			"pragma": "React"
		}
	},
	"rules": {
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": [
			1,
			{
				"vars": "all",
				"args": "none"
			}
		],
		"no-console": 0
	}
}
